unit  unit_init_the_menus;{File name:  InitTheMenus.Pas}{Function: Pull in menu lists from a resource file.}{          This procedure is called once at program start.}{          AppleMenu is the handle to the Apple menu, it is also}{          used in the procedure that handles menu events.}{History: 12/12/90 Original by Prototyper.   }interfaceconst  L_Apple = 1001; {Menu list}  C_About_Arthromorphs = 1;  L_File = 1002; {Menu list}  C_New = 1;  C_Open = 2;  C_Save_As = 3;  C_Quit = 5;  L_Operation = 1004;     {Menu list}  C_Breed = 1;  C_Show_as_Text = 2;  C_Engineer = 3;  L_View = 1005;        {Menu list}  C_Preferences = 1;procedure Init_My_Menus;        {Initialize the menus}procedure DisableMyMenus;procedure EnableMyMenus;implementation{$IFC UNDEFINED THINK_Pascal}uses Menus;{$ENDC}procedure Init_My_Menus;        {Initialize the menus}var  AppleMenu: MenuHandle;       {Menu handle}  M_File: MenuHandle;        {Menu handle}  M_Operation: MenuHandle;     {Menu handle}  M_View: MenuHandle;        {Menu handle}const  Menu1 = 1001;           {Menu resource ID}  Menu2 = 1002;           {Menu resource ID}  Menu4 = 1004;           {Menu resource ID}  Menu5 = 1005;           {Menu resource ID}begin                   {Start of Init_My_Menus}  ClearMenuBar;           {Clear any old menu bars}  { This menu is the APPLE menu, used for About and desk accessories.}  AppleMenu := GetMenu(Menu1);{Get the menu from the resource file}  InsertMenu(AppleMenu, 0);     {Insert this menu into the menu bar}  AddResMenu(AppleMenu, 'DRVR');{Add in DAs}  M_File := GetMenu(Menu2);     {Get the menu from the resource file}  InsertMenu(M_File, 0);      {Insert this menu into the menu bar}  M_Operation := GetMenu(Menu4);{Get the menu from the resource file}  InsertMenu(M_Operation, 0);{Insert this menu into the menu bar}  M_View := GetMenu(Menu5);     {Get the menu from the resource file}  InsertMenu(M_View, 0);      {Insert this menu into the menu bar}  DrawMenuBar;            {Draw the menu bar}end;                    {End of procedure Init_My_Menus}procedure DisableMyMenus;var  theMenu: MenuHandle;begin  theMenu := GetMHandle(L_Apple);  DisableItem(theMenu, C_About_Arthromorphs);  theMenu := GetMHandle(L_File);  DisableItem(theMenu, C_New);  DisableItem(theMenu, C_Open);  DisableItem(theMenu, C_Save_As);  DisableItem(theMenu, C_Quit);  theMenu := GetMHandle(L_Operation);  DisableItem(theMenu, C_Breed);  DisableItem(theMenu, C_Show_as_Text);  DisableItem(theMenu, C_Engineer);  theMenu := GetMHandle(L_View);  DisableItem(theMenu, C_Preferences);end;procedure EnableMyMenus;var  theMenu: MenuHandle;begin  theMenu := GetMHandle(L_Apple);  EnableItem(theMenu, C_About_Arthromorphs);  theMenu := GetMHandle(L_File);  EnableItem(theMenu, C_New);  EnableItem(theMenu, C_Open);  EnableItem(theMenu, C_Save_As);  EnableItem(theMenu, C_Quit);  theMenu := GetMHandle(L_Operation);  EnableItem(theMenu, C_Breed);  EnableItem(theMenu, C_Show_as_Text);  EnableItem(theMenu, C_Engineer);  theMenu := GetMHandle(L_View);  EnableItem(theMenu, C_Preferences);end;end.                    {End of this unit}